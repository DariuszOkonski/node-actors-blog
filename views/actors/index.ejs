<%- include('../partials/header.ejs') %>

<div class="container">
    <h1 class="display-4">RESTful Actors App</h1>

    <div class="row">

      <% actors.forEach(actor => { %>
        <div class="col-md-6">          
          <div class="card mb-3" style="max-width: 540px;">
            <div class="row no-gutters">
              <div class="col-md-4">
                <img src="<%= actor.picture %>" class="card-img" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title">Name: <%= actor.name %></h5>
                  <h5 class="card-title">Surname: <%= actor.surname %></h5>
                  <h6 class="card-title">Country: <%= actor.country %></h6>
                  <a href="/actors/<%= actor._id %>" class="btn btn-primary btn-sm">Read More</a>
                </div>
              </div>
            </div>
          </div>          
        </div>
        <% }) %>
    </div>
</div>

<%- include('../partials/footer.ejs') %>