<%- include('../partials/header.ejs') %>

<div class="container">
    <h1 class="display-4">Show Actor</h1>

    <div class="card mb-3">
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src="<%= actor.picture %>" class="card-img" alt="<%= actor.name %>">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">Name: <%= actor.name %></h5>
              <h5 class="card-title">Surname: <%= actor.surname %></h5>
              <h5 class="card-title">Description</h5>
              <p class="card-text"><%= actor.description %></p>
              <p class="card-text"><small class="text-muted"><%= actor.created.toLocaleDateString() %></small></p>

              <a href="/actors" class="btn btn-primary btn-sm">Back</a>            
            </div>
          </div>
        </div>
      </div>
</div>

<%- include('../partials/footer.ejs') %>